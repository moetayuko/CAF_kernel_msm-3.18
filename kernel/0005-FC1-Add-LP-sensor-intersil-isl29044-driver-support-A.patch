+	dev_dbg(&chip->client->dev, "%s: on = %d\n", __func__, on);
+	if (on) {
+		taos_irq_clr(chip, TMD277X_CMD_PROX_INT_CLR);
+		update_prox_thresh(chip, 1);
+		chip->shadow[TMD277X_ENABLE] |=
