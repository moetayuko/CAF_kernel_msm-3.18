+	int rc;
+	struct tmd2772_chip *chip = dev_get_drvdata(dev);
+
+	rc = strict_strtoul(buf, 10, &gain);
+	if (rc)
+		return -EINVAL;
+	if (gain != 0 && gain != 1 && gain != 8 && gain != 16 && gain != 120)
