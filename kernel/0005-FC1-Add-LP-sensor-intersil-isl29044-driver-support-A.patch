+	if (bufp[0x10] | bufp[0x1a] | bufp[0x1b] | bufp[0x1c] | bufp[0x1d] |
+	    bufp[0x1e])
+		return (0);
+	if (bufp[0x13] & 0x0c)
+		return (0);
+	*device_name = "tmd27713";
+	return (1);
+}
