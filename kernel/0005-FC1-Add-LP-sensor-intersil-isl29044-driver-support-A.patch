+				~(TMD277X_EN_PRX_IRQ | TMD277X_EN_PRX);
+		if (!(chip->shadow[TMD277X_ENABLE] & TMD277X_EN_ALS))
+			chip->shadow[TMD277X_ENABLE] &= ~TMD277X_EN_PWR_ON;
+		rc = update_enable_reg(chip);
+		if (rc)
+			return rc;
+		taos_irq_clr(chip, TMD277X_CMD_PROX_INT_CLR);
